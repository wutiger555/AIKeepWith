<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:src="@drawable/bannerwider"
        android:id="@+id/banner"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/line"
        android:id="@+id/itemlayout"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/itemPhoto"
            android:visibility="visible"
            android:src="@drawable/milktea"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="物品名稱: "
            android:layout_toRightOf="@+id/itemPhoto"
            android:textSize="15sp"
            android:id="@+id/title"
            android:visibility="visible"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/itemlayout"
        android:layout_marginTop="80dp"
        android:id="@+id/purchase"
        android:src="@drawable/pay_button_en"
        android:visibility="invisible"
        android:onClick="purchase"/>


    <ImageView
        android:id="@+id/scan"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/scan1"

        android:visibility="visible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible"
        android:id="@+id/order1Button"
        android:clickable="true"
        android:alpha="0"
        android:onClick="order1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/bar1"
        android:visibility="visible"
        android:id="@+id/order2Button"
        android:clickable="true"
        android:alpha="0"
        android:onClick="order2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:id="@+id/bar1">
        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/home"
            android:layout_toLeftOf="@+id/pay"
            android:layout_marginRight="70dp"
            />
        <ImageView
            android:id="@+id/pay"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/pay"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/coupon"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/pay"
            android:layout_marginLeft="70dp"
            android:src="@drawable/coupon"
            />
    </RelativeLayout>

</RelativeLayout>